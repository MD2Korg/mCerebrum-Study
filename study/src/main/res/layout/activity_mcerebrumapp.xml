<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityMicrosoftBand"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/service_text"
            style="@style/textview_heading1_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Overview"
            android:textColor="@color/amber_900" />
        <View
            style="@style/view_divider_dark" />
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow>
                <TextView
                    android:text="Application"
                    android:padding="3dip" />
                <TextView
                    android:id="@+id/textView_application_installed"
                    android:gravity="center"
                    android:padding="3dip" />
                <TextView
                    android:id="@+id/textView_application_required"
                    android:gravity="center"
                    android:padding="3dip" />
                <TextView
                    android:id="@+id/application_status"
                    android:gravity="center"
                    android:padding="3dip" />
                <TextView
                    android:id="@+id/application_todo"
                    android:gravity="center"
                    android:padding="3dip" />
            </TableRow>

        </TableLayout>

</LinearLayout>
</LinearLayout>