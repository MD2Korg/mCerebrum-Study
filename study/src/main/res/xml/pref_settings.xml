<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Study Setup Status">
        <Preference
            android:key="key_status"
            android:icon="@drawable/ic_error_red_50dp"
            android:title="Status"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Study Setup">
    <Preference
        android:key="key_app"
        android:title="Applications" />
    <Preference
        android:key="key_settings"
        android:title="Application Settings" />
    <EditTextPreference
        android:key="key_user_id"
        android:title="User ID" />

    <Preference
        android:key="key_wakeup_time"
        android:title="Wakeup Time" />
    <Preference
        android:key="key_sleep_time"
        android:title="Sleep Time" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Reset Study"
        android:key="key_reset"/>
</PreferenceScreen>
